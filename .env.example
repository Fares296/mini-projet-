# ==================== BASE DE DONNÉES ====================

# PostgreSQL - Users
DB_HOST=postgres
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_secure_password_here
DB_NAME=usersdb

# PostgreSQL - Products
DB_PRODUCTS_HOST=postgres-products
DB_PRODUCTS_PORT=5432
DB_PRODUCTS_USER=your_products_db_user
DB_PRODUCTS_PASSWORD=your_products_secure_password_here
DB_PRODUCTS_NAME=productsdb

# ==================== REDIS ====================

REDIS_HOST=redis
REDIS_PORT=6379

# ==================== SERVICES ====================

# Users Service
USERS_SERVICE_PORT=3000

# Products Service
PRODUCTS_SERVICE_PORT=3001

# ==================== MONITORING ====================

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_this_password

# ==================== API GATEWAY ====================

GATEWAY_PORT=8080

# ==================== SÉCURITÉ ====================

# JWT Secret (générer avec: openssl rand -base64 32)
# IMPORTANT: Changer cette valeur en production !
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# API Rate Limiting
# Fenêtre de temps en millisecondes (60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000
# Nombre maximum de requêtes par fenêtre
RATE_LIMIT_MAX_REQUESTS=100

# CORS - Origines autorisées (séparées par des virgules)
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# ==================== ENVIRONNEMENT ====================

NODE_ENV=development
LOG_LEVEL=info

# ==================== INSTRUCTIONS ====================
#
# 1. Copier ce fichier vers .env
# 2. Remplacer TOUTES les valeurs par défaut
# 3. Ne JAMAIS commiter le fichier .env dans Git
# 4. Générer un JWT secret sécurisé:
#    openssl rand -base64 32
# 5. Utiliser des mots de passe forts (min 12 caractères)
